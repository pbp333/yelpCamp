<% include ../partials/header%>

<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1>Create a new Comment to <%=campground.name%></h1>
	</div>
	<div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/campgrounds/<%=campground.id%>/comments" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="content">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds/campground.id">Back</a>
	</div>
</div>

<% include ../partials/footer%>