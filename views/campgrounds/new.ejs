<% include ../partials/header%>

<div class="row">
	<h1 style="text-align: center">Create a new Campground</h1>
	<div style="width: 30%; margin: 30px auto">
		<form action="/campgrounds" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control" type="text" name="name" placeholder="name">
			</div>
			<div class="form-group">
				<label for="name">Price</label>
				<input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<label for="name">Image</label>
				<input class="btn btn-md" type="file" id = "image" name="image" accept="image/*" required>
			</div>
			<div class="form-group">
				<label for="name">Description</label>
				<input class="form-control" type="text" name="description" placeholder="description">
			</div>
			<div class="form-group">
				<label for="name">Location</label>
				<input class="form-control" type="text" name="location" placeholder="location">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Back</a>
	</div>
</div>

<% include ../partials/footer%>